<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewBag.Title - Meine ASP.NET-Anwendung</title>
    @Styles.Render("~/Content/searchbar.css")
    @Styles.Render("~/Content/searchresultdetails.css")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("QDCourse", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Kurs suchen", "SearchCourse", "CourseSearch")</li>
                    <li>@Html.ActionLink("Kurs anlegen", "Index", "AddCourse")</li>
                    <li>@Html.ActionLink("Meine Kurse", "MyCourses", "MyCourses")</li>
                    <li>@Html.ActionLink("CG", "Index", "ContentGroups")</li>
                    <li>@Html.ActionLink("CETest", "Index", "ContentElements")</li>
                    <li>@Html.ActionLink("Courses", "Index", "Courses")</li>
                    <li>@Html.ActionLink("EnrTest", "Index", "Enrollments")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <footer id="align-footer" class="navbar-fixed-bottom">
            <hr />
          <p>&copy; @DateTime.Now.Year - Quick and Dirty Online Courses</p> 
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
